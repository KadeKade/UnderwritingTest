    <!--
        Added the constraints for entity ParameterValue.
    -->
    <changeSet id="20230502145024-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="action_parameter_id"
                                 baseTableName="parameter_value"
                                 constraintName="fk_parameter_value__action_parameter_id"
